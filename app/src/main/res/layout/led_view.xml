<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/a"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:layout_marginBottom="@dimen/led_far_distance"
        android:src="@drawable/led"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

    <ImageView
        android:id="@+id/b"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:layout_marginLeft="@dimen/led_close_distance"
        android:layout_marginBottom="@dimen/led_close_distance"
        android:src="@drawable/led_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

    <ImageView
        android:id="@+id/c"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:layout_marginLeft="@dimen/led_close_distance"
        android:layout_marginTop="@dimen/led_close_distance"
        android:src="@drawable/led_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

    <ImageView
        android:id="@+id/d"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:layout_marginTop="@dimen/led_far_distance"
        android:src="@drawable/led"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

    <ImageView
        android:id="@+id/e"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:layout_marginTop="@dimen/led_close_distance"
        android:layout_marginRight="@dimen/led_close_distance"
        android:src="@drawable/led_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

    <ImageView
        android:id="@+id/f"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:layout_marginRight="@dimen/led_close_distance"
        android:layout_marginBottom="@dimen/led_close_distance"
        android:src="@drawable/led_90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

    <ImageView
        android:id="@+id/g"
        android:layout_width="@dimen/led_width"
        android:layout_height="@dimen/led_height"
        android:src="@drawable/led"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/led_off" />

</androidx.constraintlayout.widget.ConstraintLayout>